<style>
  :root {
    --card-gap: 2rem;
  }

  /* Outer card wrapper */
  .card {
    max-width: 72rem;
    margin-inline: auto;
    background: var(--gray-0);
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
    padding: 0.75rem;
  }

  /* Grid: sidebar + main */
  .cv-grid {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: var(--card-gap);
    align-items: start;
  }

  /* Sidebar */
  .cv-sidebar {
    background: linear-gradient(
      180deg,
      var(--gray-900),
      rgba(17, 17, 17, 0.95)
    );
    color: var(--gray-300);
    padding: 1.25rem;
    border-radius: 0.75rem;
  }
  .cv-name {
    font-size: 1.125rem;
    margin: 0 0 0.25rem 0;
    color: var(--gray-0);
  }
  .cv-role {
    color: var(--gray-300);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .section-title {
    font-size: 1rem;
    color: var(--gray-999);
    margin: 0 0 0.5rem 0;
    border-bottom: 2px solid rgba(255, 255, 255, 0.06);
    padding-bottom: 0.5rem;
  }

  .cv-contact,
  .cert-list {
    list-style: none;
    padding: 0;
    margin: 0;
    color: var(--gray-200);
  }
  .cv-contact li {
    margin-bottom: 0.5rem;
  }
  .cv-contact a {
    color: var(--gray-0);
    text-decoration: underline;
  }

  .cv-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.35rem;
    margin-top: 0.5rem;
  }
  .tag {
    background: rgba(150, 136, 136, 0.06);
    color: var(--gray-100);
    padding: 0.25rem 0.5rem;
    border-radius: 999px;
    font-size: 0.85rem;
  }

  /* Main column: keep text dark on light background for readability */
  .cv-main {
    background: transparent;
    padding: 1.25rem;
    border-radius: 0.5rem;
    color: var(--gray-800);
  }
  .lead {
    color: var(--gray-700);
    margin-bottom: 1rem;
  }
  .muted {
    color: var(--gray-500);
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
  }

  .job + .job {
    margin-top: 1rem;
  }
  .cert-list li {
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--accent, #2b9edb);
  }

  @media (max-width: 880px) {
    .cv-grid {
      grid-template-columns: 1fr;
    }
    .cv-sidebar {
      order: -1;
    }
  }
</style>
